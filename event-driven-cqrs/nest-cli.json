{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/event-driven-cqrs/src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
  },
  "monorepo": true,
  "root": "apps/api-gateway",
  "projects": {
    "api-gateway": {
      "type": "application",
      "root": "apps/api-gateway",
      "entryFile": "main",
      "sourceRoot": "apps/api-gateway/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api-gateway/tsconfig.app.json"
      }
    },
    "command-service": {
      "type": "application",
      "root": "apps/command-service",
      "entryFile": "main",
      "sourceRoot": "apps/command-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/command-service/tsconfig.app.json"
      }
    },
    "common": {
      "type": "library",
      "root": "libs/common",
      "entryFile": "index",
      "sourceRoot": "libs/common/src",
      "compilerOptions": {
        "tsConfigPath": "libs/common/tsconfig.lib.json"
      }
    },
    "projection-service": {
      "type": "application",
      "root": "apps/projection-service",
      "entryFile": "main",
      "sourceRoot": "apps/projection-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/projection-service/tsconfig.app.json"
      }
    },
    "query-service": {
      "type": "application",
      "root": "apps/query-service",
      "entryFile": "main",
      "sourceRoot": "apps/query-service/src",
      "compilerOptions": {
        "tsConfigPath": "apps/query-service/tsconfig.app.json"
      }
    }
  }
}